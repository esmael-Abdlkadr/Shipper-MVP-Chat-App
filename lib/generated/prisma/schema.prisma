generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String           @id @default(cuid())
  email            String           @unique
  name             String?
  image            String?
  password         String?
  emailVerified    DateTime?
  lastSeen         DateTime         @default(now())
  isOnline         Boolean          @default(false)
  preferredAIModel String           @default("gemini") // "gemini" | "openai"
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  messages         Message[]
  sessions         ChatSession[]    @relation("ChatParticipants")
  accounts         Account[]
  aiConversations  AIConversation[]
  reactions        Reaction[]
  aiProfile        UserAIProfile?
  createdGroups    Group[]          @relation("GroupCreator")
  groupMembers     GroupMember[]
  groupMessages    GroupMessage[]   @relation("GroupMessageSender")
}

model UserAIProfile {
  id              String    @id @default(cuid())
  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  personality     String    @default("bestie")
  friendshipXP    Int       @default(0)
  friendshipLevel Int       @default(1)
  streak          Int       @default(0)
  lastInteraction DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  type      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
}

model ChatSession {
  id           String    @id @default(cuid())
  participants User[]    @relation("ChatParticipants")
  messages     Message[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Message {
  id          String       @id @default(cuid())
  content     String
  senderId    String
  sender      User         @relation(fields: [senderId], references: [id])
  sessionId   String
  session     ChatSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  read        Boolean      @default(false)
  delivered   Boolean      @default(false)
  replyToId   String?
  replyTo     Message?     @relation("MessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies     Message[]    @relation("MessageReplies")
  attachments Attachment[]
  reactions   Reaction[]
  createdAt   DateTime     @default(now())

  @@index([sessionId])
  @@index([senderId])
}

model Attachment {
  id        String   @id @default(cuid())
  type      String
  url       String
  name      String
  size      Int
  mimeType  String?
  messageId String
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([messageId])
}

model Reaction {
  id        String   @id @default(cuid())
  emoji     String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messageId String
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, messageId, emoji])
  @@index([messageId])
}

model AIConversation {
  id        String      @id @default(cuid())
  title     String?
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  AIMessage[]
  model     String? // Override model for this conversation
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([userId])
}

model AIMessage {
  id             String         @id @default(cuid())
  conversationId String
  conversation   AIConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String
  content        String         @db.Text
  model          String? // Which AI model generated this (for assistant messages)
  createdAt      DateTime       @default(now())

  @@index([conversationId])
}

model Group {
  id          String         @id @default(cuid())
  name        String
  description String?
  avatar      String?
  creatorId   String
  creator     User           @relation("GroupCreator", fields: [creatorId], references: [id])
  members     GroupMember[]
  messages    GroupMessage[]
  aiEnabled   Boolean        @default(true)
  maxMembers  Int            @default(100)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([creatorId])
}

model GroupMember {
  id       String   @id @default(cuid())
  groupId  String
  userId   String
  role     String   @default("member")
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt DateTime @default(now())

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
}

model GroupMessage {
  id              String         @id @default(cuid())
  groupId         String
  senderId        String?
  isAI            Boolean        @default(false)
  content         String         @db.Text
  replyToId       String?
  replyTo         GroupMessage?  @relation("GroupMessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies         GroupMessage[] @relation("GroupMessageReplies")
  group           Group          @relation(fields: [groupId], references: [id], onDelete: Cascade)
  sender          User?          @relation("GroupMessageSender", fields: [senderId], references: [id])
  createdAt       DateTime       @default(now())
  editedAt        DateTime?
  deletedAt       DateTime?
  deletedForUsers String[]       @default([])
  aiModel         String? // Which AI model generated this (for AI messages)

  @@index([groupId])
  @@index([senderId])
  @@index([replyToId])
}
